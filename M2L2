@bot.command()
async def yesdua(ctx):
    await ctx.send(f'Berikut cara memilah sampah di luar rumah:')
    await ctx.send(f'1. Gunakan tempat sampah yang tersedia di area umum dan pastikan tempat tersebut terpisah antara sampah organik dan anorganik.')
    await ctx.send(f'2. Jangan membuang sampah sembarangan, tetap gunakan tempat sampah yang telah disediakan.')
    await ctx.send(f'3. Bawa sampah anorganik ke tempat daur ulang atau pusat pengumpulan sampah anorganik jika tersedia.')
    await ctx.send(f'4. Segera buang sampah organik ke tempat pengolahan kompos atau tempat pengumpulan sampah organik setempat untuk menghindari bau dan hama.')
    await ctx.send(f'5. Pantau dan evaluasi kebiasaan memilah sampah di luar rumah secara berkala untuk memastikan konsistensi dan efektivitasnya.')
    await ctx.send(f'Selamat mencoba! Dengan memilah sampah di luar rumah, kita turut berkontribusi pada pelestarian lingkungan.')
    await ctx.send(f'lanjut ke opsi satu? (type : satu)')

@bot.command()
async def nodua(ctx):
    await ctx.send(f'Pilih satu yang ingin kamu ketahui!')
    await ctx.send(f'(satu) cara memilah sampah didalamm rumah ')
    await ctx.send(f'(dua) cara memilah sampah diluar rumah')

bot.run("TOKEN")
